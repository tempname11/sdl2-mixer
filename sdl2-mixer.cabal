name:                sdl2-mixer
version:             0
synopsis:            Both high- and low-level bindings to the SDL_mixer library (version 2.0.0).
description:
  This package contains bindings to the SDL_mixer 2 library, in both high- and
  low-level forms, similar to the ones found in the 'sdl2' package.

license:             BSD3
license-file:        LICENSE
author:              Vladimir Semyonov
maintainer:          tempname011@gmail.com
copyright:           Copyright Â© 2015  Vladimir Semyonov
category:            Sound
build-type:          Simple
cabal-version:       >= 1.10

library
  ghc-options: -Wall

  exposed-modules:
    SDL.Mixer

    SDL.Raw.Mixer
    SDL.Raw.Mixer.Enum
    SDL.Raw.Mixer.Types

  hs-source-dirs:
    src/

  includes:
    SDL_mixer.h

  extra-libraries:
    SDL2_mixer

  pkgconfig-depends:
    SDL2_mixer >= 2.0.0

  build-depends:
    base >= 4.7 && < 5,
    sdl2 == 0,
    bytestring,
    transformers >= 0.2 && < 0.5

  default-language:
    Haskell2010

executable example-basic-raw
  build-depends:
    base >= 4.7 && < 5,
    sdl2,
    sdl2-mixer

  hs-source-dirs: examples
  main-is: BasicRaw.hs
  default-language: Haskell2010
  ghc-options: -Wall

executable example-basic
  build-depends:
    base >= 4.7 && < 5,
    sdl2,
    sdl2-mixer

  hs-source-dirs: examples
  main-is: Basic.hs
  default-language: Haskell2010
  ghc-options: -Wall
